{
  "mcpServers": {
    "sora": {
      "command": "node",
      "args": [
        "/path/to/sora-mcp-server/dist/index.js"
      ],
      "env": {
        "USE_AZURE": "true",
        "AZURE_OPENAI_ENDPOINT": "https://your-resource.openai.azure.com",
        "AZURE_OPENAI_KEY": "your-api-key",
        "AZURE_DEPLOYMENT_NAME": "sora"
      }
    }
  }
}
